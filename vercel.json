{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NEXTAUTH_URL": "${NEXTAUTH_URL}",
    "NEXTAUTH_SECRET": "${NEXTAUTH_SECRET}",
    "DATABASE_URL": "file:./db/custom.db"
  },
  "build": {
    "env": {
      "NEXTAUTH_URL": "${NEXTAUTH_URL}",
      "NEXTAUTH_SECRET": "${NEXTAUTH_SECRET}",
      "DATABASE_URL": "file:./db/custom.db"
    }
  }
}